<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddClassesActivity">


    <EditText
        android:id="@+id/subject_text_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="25dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/course_num_input"
        android:layout_width="169dp"
        android:layout_height="43dp"
        android:layout_marginEnd="25dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/course_num_label" />

    <Button
        android:id="@+id/enter_class_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="59dp"
        android:onClick="onEnterClick"
        android:text="ENTER"
        android:textSize="24sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/cancel_class_button"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/cancel_class_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="59dp"
        android:layout_marginBottom="141dp"
        android:onClick="onCancelClick"
        android:text="CANCEL"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/subject_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:text="Subject"
        android:textSize="32sp"
        app:layout_constraintBottom_toBottomOf="@+id/subject_text_input"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/course_num_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="35dp"
        android:text="Course #"
        android:textSize="32sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/subject_label" />

    <TextView
        android:id="@+id/year_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="103dp"
        android:layout_marginBottom="106dp"
        android:text="Year"
        android:textSize="32sp"
        app:layout_constraintBottom_toBottomOf="@+id/quarter_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/add_classes_header" />

    <TextView
        android:id="@+id/add_classes_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="ADD CLASS"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/quarter_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="48dp"
        android:text="Quarter"
        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@+id/subject_label"
        app:layout_constraintStart_toStartOf="parent" />

    <Spinner
        android:id="@+id/year_spinner"
        android:layout_width="203dp"
        android:layout_height="28dp"
        android:layout_marginTop="110dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="107dp"
        android:textAlignment="textEnd"
        app:layout_constraintBottom_toBottomOf="@+id/quarter_spinner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/add_classes_header" />

    <Spinner
        android:id="@+id/quarter_spinner"
        android:layout_width="206dp"
        android:layout_height="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="55dp"
        android:textAlignment="textEnd"
        app:layout_constraintBottom_toTopOf="@+id/subject_text_input"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>